{
  "terminal.integrated.defaultProfile.linux": "bash",
  "ansible.ansibleLint.arguments": "-c .github/linters/.ansible-lint",
  "files.associations": {
    "*.json5": "jsonc",
    "**/provision/ansible/**/*.yml": "ansible",
    "**/provision/ansible/**/*.sops.yml": "yaml",
    "**/provision/ansible/**/inventory/**/*.yml": "yaml",
    "**/provision/terraform/**/*.tf": "terraform"
  },
  "prettier.configPath": ".github/linters/.prettierrc.yaml",
  "prettier.ignorePath": ".github/linters/.prettierignore",
  "yaml.schemas": {
    "Kubernetes": "cluster/*.yaml",
    "https://taskfile.dev/schema.json": ["**/Taskfile.yml", "**/Taskfile.yaml"]
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.hover.delay": 1500,
  "ansible.python.interpreterPath": "/bin/python3",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "[hcl]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "cSpell.language": "en",
  "cSpell.enableFiletypes": ["markdown", "terraform", "yaml", "hcl"],
  "cSpell.words": [
    "ansible",
    "devbox",
    "homelab",
    "kubernetes",
    "mkdocs",
    "opnsense",
    "packer",
    "pikvm",
    "proxmox",
    "renovate",
    "sops",
    "taskfile",
    "terraform",
    "tflint"
  ],
  "files.exclude": {
    "**/.terraform": true,
    "**/.ansible": true,
    "**/.devbox": true,
    "**/node_modules": true,
    "**/__pycache__": true
  }
}
