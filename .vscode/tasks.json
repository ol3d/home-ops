{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "startup",
      "dependsOn": ["Claude", "MkDocs"],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Claude",
      "type": "shell",
      "command": "claude",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*\\*\\s*Executing task: claude",
          "endsPattern": "^>\\s"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      }
    },
    {
      "label": "MkDocs",
      "type": "shell",
      "command": "mkdocs",
      "args": ["serve"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^INFO\\s+-\\s+Building documentation",
          "endsPattern": "^INFO\\s+-\\s+.*Serving on"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
